body {
	background: #f0f0f0;
	color: #000;
	font-size: 14px;
	line-height: 20px;
	font-family: Arial, Helvetica, sans-serif;
	padding: 0;
	margin: 0;
}

h1 {
	font-family: customFont;
	font-size: 48px;
	color: #b91519;
	text-shadow: 0 1px 0 #fff;
}

h2 {
	font-size: 32px;
	color: #b91519;
	font-weight: normal;
}

h3 {
	font-size: 18px;
	color: #333;	
}

h4 {
	margin-bottom: 0;
}

p {
	margin-top: 0;
}

strong {
	color: #b91519;
}

a {
	color: #000;
	text-decoration: none;
}

a:hover {
	color: #D9292B;
}

a img {
	border: none;
}

ul {
	padding-left: 16px;
}

:focus {
	outline: none;
}

/* Clearfix */
.clearfix:after {
     visibility: hidden;
     display: block;
     font-size: 0;
     content: ' ';
     clear: both;
     height: 0;
}

.text-center {
	text-align: center;
}

.text-left {
	text-align: left;
}

.text-right {
	text-align: right;
}

.clearfix { 
	display: inline-block; 
}

/* Clearfix: start commented backslash hack \*/
* html .clearfix { height: 1%; }
.clearfix { display: block; }
/* close commented backslash hack */

/* -------------------------------- *
 * END: General
 * -------------------------------- */

/* -------------------------------- *
 * Wrapper
 * -------------------------------- */

.wrapper {
	width: 1024px;
	height: auto;
	margin: 0 auto;
	background: #fff;
	/* border: 1px solid #999; */
	border-top: none;
}

/* -------------------------------- *
 * END: Wrapper
 * -------------------------------- */

/* -------------------------------- *
 * Header
 * -------------------------------- */

.header {
	position: relative;	
	width: 900px;
	height: 131px;
}

.logo {
	display: block;
}

.facebook {
	position: absolute;
	top: 10px;
	right: 70px;
}

.twitter {
	position: absolute;
	top: 10px;
	right: 40px;
}

.linkedin {
	position: absolute;
	top: 10px;
	right: 10px;
}

/* -------------------------------- *
 * END: Header
 * -------------------------------- */

/* -------------------------------- *
 * Navbar
 * -------------------------------- */

.nav {
	width: 1024px;
	background: url(../img/nav.png) repeat-x #fff;
	margin: 0;
	padding-left: 0;
	font-size: 12px;
	line-height: 18px;
	float: left;
	position: relative;
	z-index: 1;
	border-top: 1px solid #ccc;
	border-bottom: 1px solid #999;
}

.nav li {
	display: inline;
	margin: 0;
	padding: 0;
	float: left;
}

.nav li a {
	padding: 8px 16px;
	display: inline-block;
	font-weight: bold;
	color: #333;
	text-shadow: 0 1px 0 #fff;
	border-left: 1px solid #fff;
	border-right: 1px solid #aaa;
}

.nav li a:hover {
	background: url(../img/nav_hover.png) repeat-x;
	text-decoration: none;
}

.nav li a.current {
	background: url(../img/nav_current.jpg) repeat-x;
	color: #fff;
	text-shadow: 0 1px 0 #222;
}

/* -------------------------------- *
 * END: Navbar
 * -------------------------------- */

/* -------------------------------- *
 * Content
 * -------------------------------- */

.content {
	background: #fff;
	position: relative;
	margin-top: -5px;
	border-bottom: 1px solid #ccc;
}

.copy {
	padding: 10px 40px 60px;
	text-align: left;
    
}


.franchise { 
	float: right;
	clear: both;
	margin: 5px;
	margin-left: 40px;	
}

/* product logos */
.prod_logos {
	/* border: 1px solid #ddd; */
}

/* Servics Photo */
.services_photo {
	margin: 0 2px;
	/* border: 1px solid #bbb; */
}

/* -------------------------------- *
 * END: Content
 * -------------------------------- */

/* -------------------------------- *
 * Footer
 * -------------------------------- */
.footer {
	width: 860px;
	float: right;
	clear: both;
	padding: 20px;
	color: #999;
	font-size: 11px;
	background: url(../img/footer.jpg) repeat-x bottom #fff;
}

#index .footer {
	border-top: none;
}

.footer a {
	color: #999;
	font-weight: bold;
}

/* products logos */
.footer .product_logos {
	padding: 10px 0 20px;
}

.footer .product_logos img {
	margin-right: 15px;
}


/* -------------------------------- *
 * END: Footer
 * -------------------------------- */

/* -------------------------------- *
 * Tables
 * -------------------------------- */

table {
	width: 850px;
	border-collapse: collapse;
	margin: 0 0 20px;
}

th {
	background: /*url(../img/header.jpg) repeat-x bottom */ #d9292b;
	padding: 6px 8px;
	font-weight: normal;
	font-size: 16px;
	text-align: left;
	text-shadow: 0 1px 0 #333;
	color: #fff;
	padding-left: 8px;
	margin-bottom: 0;
}


tr:nth-child(odd) {
	background: #efefef;
}

tr p {
	font-size: 11px;
	font-style: italic;
}

td {
	padding: 0;
}

td {
	padding: 2px 8px;
}

table + a {
	float: right;
	font-weight: bold;
}


/* -------------------------------- *
 * END: Tables
 * -------------------------------- */

/* -------------------------------- *
 * Tabs
 * -------------------------------- */

.tab_menu {
	padding: 0;
	padding-bottom: 6px;
	margin: 0;
}

.tab_menu li {
	display: inline;
	padding: 0;
	margin: 0;
}

.tab_menu li a {
	padding: 8px;
	background: url(../img/header.jpg) repeat-x bottom #d9292b;
	color: #fff;
	font-size: 14px;
	text-shadow: 0 1px 0 #333;
}

.tab {
	padding: 5px;
	border: 1px solid #ccc;
}

/* -------------------------------- *
 * END: Tabs
 * -------------------------------- */

/* -------------------------------- *
 * Slideshow
 * -------------------------------- */

.slides_container {
	display: block;
	width: 900px;
	border-top: 1px solid #fff; 
	border-bottom: 1px solid #ccc;
}

.slide {
	width: 820px;
	height: 310px;
	padding: 20px 40px;
	font-size: 32px;
	text-align: right;
	color: #333;
	text-shadow: 0 1px 0 #fff;
}

.slide p {
	line-height: normal;
}

.first {
	background: url(../img/slideshow/slide01.jpg);
}

.second {
	background: url(../img/slideshow/slide02.jpg);
}

.third {
	background: url(../img/slideshow/slide03.jpg);
}

.pagination {
	list-style: none;
	width: 100px;
	margin: 10px auto;
	padding: 0;
}

.pagination li {
	display: inline;
	background: url(../img/slideshow/pagination.png)
}

.pagination li a {
	display:block;
	width:12px;
	height:0;
	padding-top:12px;
	background-image:url(../img/slideshow/pagination.png);
	background-position:0 0;
	float:left;
	overflow:hidden;
}

.pagination li.current a {
	background-position:0 -12px;
}

#slides .next,#slides .prev {
	position: absolute;
	top: 107px;
	left: -24px;
	width: 24px;
	height: 43px;
	display: block;
	z-index: 101;
}

#slides .next {
	left: 900px;
}

.prev:focus,
.next:focus {
	outline: none;
}

.next {
	background: url(../img/slideshow/arrow-next.png);
}

.prev {
	background: url(../img/slideshow/arrow-prev.png);
}

.button {
	background:url(../img/button_red.jpg) repeat-x top;
	font-size: 14px;
	color: #fff;
	text-shadow: 0 1px 0 #320708;
	font-weight: bold;
	text-transform: uppercase;	
	padding: 12px 24px;
	/* border: 1px solid #770608; */
	
	border-radius: 4px;
	-moz-border-radius: 4px;
	-webkit-border-radius: 4px;
}

.button:hover {
	background: #cb151c;
	color: #fff;
}

.green {
	background:url(../img/button_green.jpg) repeat-x top;
	text-shadow: 0 1px 0 #098011;
}

.green:hover {
	background: #14b915;
}

/* -------------------------------- *
 * END: Slideshow
 * -------------------------------- */

/* -------------------------------- *
 * Inputs
 * -------------------------------- */
input[type='text'],
textarea {
	width: 300px;
	font-size: 14px;
	padding: 6px;
	border: 1px solid #999;	
}

textarea {
	min-height: 150px;
	margin-bottom: 20px;
}

input[type='submit'] {
	padding: 4px 18px;
	cursor: pointer;
}



/* --------------------------------
 * END: Inputs
 * -------------------------------- */

/* --------------------------------------------------------
 * THE END
 * -------------------------------------------------------- */