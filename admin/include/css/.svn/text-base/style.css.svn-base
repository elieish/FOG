/* Admin Template */

* {
	font-family: sans-serif;
}

body {
	background: #EDEFF1;
	margin: 0px;
	padding: 0px;
	font-family: Arial, Helvetica, sans-serif;
	font-size: 14px;
	line-height: 18px;
}

h2 {
	font-size: 30px;
	color: #257dbc;
	clear: both;
	margin-bottom: 32px;
}

a, a:visited {
	color: #2679B5;
	text-decoration: none;
}

a:hover {
	color: #FF0000;
	text-decoration: underline;
}

ul {
	list-style: none;
	margin: 0;
	padding: 0;
}

ul li {
	display: inline;
}

.page_wrapper {
	max-width: 1024px;
	height: auto;
	margin: 0 auto;
}

.header {
	width: 100%;
}

.spanner {
	display: block;
	float: left;
	width: 24px;
	height: 24px;
	background: url(../images/assets.png) 0 -90px;
	margin: -2px 8px 0 5px;
}

.hammer {
	display: block;
	width: 61px;
	height: 75px;
	background: url(../images/assets.png) -152px 0;
	margin: 0 auto
}

.menu {
	background: #2D2D2D;
	padding: 7px 4px;
	height: 20px;
}

.menu li a {
	font-size: 14px;
	padding: 10px 12px;
	color: #ddd;
	text-decoration: none;
	border-right: 1px solid #555;
	margin-right: -4px;
}

.menu li.login a {
	border-right: none;
	margin-right: 0;
	
}

.menu li a:hover {
	background: #555;
	text-shadow: 0 1px 0 #333;
}

.menu a {
	font-size: 14px;
	color: #ddd;
}

.website {
	margin: 0 10px;
}

.login {
	float: right;
	color: #ddd;
	margin-right: -4px;
}

.login a {
	text-decoration: none;
}

.content_wrapper {

}

.content {
	height: auto;
	padding: 10px 20px 40px;
	background: #fff;
}

/* Clearfix */
.clearfix:after {
     visibility: hidden;
     display: block;
     font-size: 0;
     content: " ";
     clear: both;
     height: 0;
}

.clearfix { 
	display: inline-block; 
}

/* Clearfix: start commented backslash hack \*/
* html .clearfix { height: 1%; }
.clearfix { display: block; }
/* close commented backslash hack */

label {
	display: inline-block;
	font-size: 14px;
	font-weight: bold;
	color: #444;
	margin-bottom: 3px;
}

input[type='text'] {
	width: 300px;
	padding: 4px;
	border: 1px solid #ccc;
	margin-bottom: 16px;
	font-size: 14px;
	
	-moz-border-radius: 3px;
	-webkit-border-radius: 4px;
	border-radius: 4px;
}

input[type='text']:focus {
	border: 1px solid #999;
}

.main_button,
input[type='submit'] {
	display: block;
	width: 100px;
	margin: 0 0 16px;
	padding: 6px 0;
	background: #328dcf;
	border: 1px solid #328dcf;
	text-align: center;
	color: #fff;
	font-size: 18px;
	text-shadow: 0 0 1px #328dcf;
	background-position: 0 0;
	cursor: pointer;
	cursor: hand;
	
	-moz-border-radius: 6px;
	-webkit-border-radius: 6px;
	border-radius: 6px;
}

.main_button:hover,
input[type='submit']:hover {
	border: 1px solid #125585;
	text-shadow: 0 0 3px #125585;
	
	background: #2474af;
	background: -moz-linear-gradient(top, #328dcf 0%, #2474af 100%);
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#328dcf), color-stop(100%,#2474af));
	/*background: -webkit-linear-gradient(top, #00cc00 0%,#00af00 100%);*/
	background: -o-linear-gradient(top, #328dcf 0%,#2474af 100%);
	background: linear-gradient(top, #328dcf 0%,#2474af 100%);
}

.main_button:active,
input[type='submit']:active {
	-moz-box-shadow: 0 0 8px #125585 inset;
	-webkit-box-shadow: 0 0 8px #125585 inset;
	box-shadow: 0 0 8px #125585 inset;
}


.welcome {
	width: 450px;
	height: ;
	padding: 20px;
	margin: 50px auto;
	background: #fff;
	border: 1px solid #eee;
	text-align: center;
	border: 1px solid #ddd;
	
	-moz-border-radius: 12px;
	-webkit-border-radius: 12px;
	border-radius: 12px;
	
	-moz-box-shadow: 0 0 8px #ccc inset;
	-webkit-box-shadow: 0 0 8px #ccc inset;
	box-shadow: 0 0 8px #ccc inset;
}

.welcome p {
	color: #444;
}

a span {
	text-decoration: none;
}

.start {
	display: block;
	width: 150px;
	padding: 12px 0;
	margin: 0 auto;
	background: #0C0;
	border: 1px solid #0C0;
	color: #fff;
	font-size: 21px;
	text-shadow: 0 0 1px #0C0;
	background-position: 0 0;
	margin-top: 14px;
	cursor: pointer;
	cursor: hand;
	
	-moz-border-radius: 6px;
	-webkit-border-radius: 6px;
	border-radius: 6px;
}

.start:hover {
	border: 1px solid #1d7d16;
	text-shadow: 0 0 3px #1d7d16;
	
	background: #01b501;
	background: -moz-linear-gradient(top, #00cc00 0%, #00af00 100%);
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#00cc00), color-stop(100%,#00af00));
	/*background: -webkit-linear-gradient(top, #00cc00 0%,#00af00 100%);*/
	background: -o-linear-gradient(top, #00cc00 0%,#00af00 100%);
	background: linear-gradient(top, #00cc00 0%,#00af00 100%);
}

.start:active {
	-moz-box-shadow: 0 0 8px #0a800a inset;
	-webkit-box-shadow: 0 0 8px #0a800a inset;
	box-shadow: 0 0 8px #0a800a inset;
}

.page_list {
	float: left;
	clear: both;
}

.page {
	float: left;
	padding: 8px;
}

.saved {
	float: left; 
	width: 90%; 
	margin: 20px; 
	padding: 10px; 
	background: #13920a;
}

.saved .text {
	color: #fff;
	display: block; 
	font-size: 18px;
	font-weight: bold;
	float: left;
}

.banner {
	float: left; 
	margin: 10px 10px 30px; 
	width: 95%;
	padding: 10px;
	color: #0a800a;
	background: #c5f8c5; 
	border: 1px #0a800a solid; 
	font-weight: bold;
	/*text-shadow: 0 1px 0 #fff;*/
}

.tick {
	display: block;
	width: 20px;
	height: 20px;
	float: left;
	margin-right: 10px;
	background: url(../images/assets.png) -34px -94px;
}

.sign {
    display: block;
    width: 33px;
    height: 28px;
    float: left;
    margin-top: -5px;
    margin-right: 5px;
    background: url(../images/assets.png) -142px  -90px
}

.config {
	display: block;
	width: 28px;
	height: 28px;
	float: left;
	margin-top: -6px;
	margin-right: 6px;
	background: url(../images/assets.png) -59px -90px;
}

.edit {
	display: block;
	width: 28px;
	height: 28px;
	float: left;
	margin-top: -6px;
	margin-right: 6px;
	background: url(../images/assets.png) -173px -90px;
}

.user {
	display: block;
	width: 33px;
	height: 28px;
	float: left;
	margin-top: -7px;
	margin-right: 5px;
	background: url(../images/assets.png) -90px -90px;
}

.footer {
	position: relative;
	top: 15px;
	right: 15px;
	font-size: 11px;
	color: #888;
}

.footer .copyright {
	float: right;
}

.footer .copyright a {
	color: #999;
}

.footer .copyright a:hover {
	text-decoration: underline;
}

.footer .version {
	float: right;
	margin-left: 10px;
	font-weight: normal;
}

/* Results Table */

table.results_table {
	width: 100%;
	border-collapse: collapse;
	border: 1px solid #ddd; 
	font-size: 12px;
	background-color: #FFF;
}

table.results_table a{
	color: #333;
}

table.results_table th {
	text-align: left;
	padding: 4px 8px; 
	font-size: 13px;
	font-weight: bold;
	border: 1px solid #ddd;
	color: #ddd;
	background: #2D2D2D;
}

table.results_table th:hover {
	background: #555;
}

table.results_table td {
	padding: 8px;
}

table.results_table td input[type='text'] {
	width: 90%;
	margin: 0;
}

table.results_table tr:nth-child(odd) {
	background: #f1f1f1;
}

table.results_table tr:hover {
	background: #ddd;
	cursor: pointer;
	cursor: hand;
}

.remove {
	margin-left: 8px;
	font-size: 12px;
	font-weight: bold;
	color:#F00 !important;
}

